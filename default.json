{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "updateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "packagePatterns": [
        "@material-ui/lab",
        "@material-ui/pickers"
      ],
      "enabled": false
    }
  ],
  "major": {
    "masterIssueApproval": true
  },
  "renovateFork": true,
  "dependencyDashboard": true
}
